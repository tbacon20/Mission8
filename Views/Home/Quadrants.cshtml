                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-2">
            <h5 class="sideways">Not Important</h5>
        </div>
        <div class="col-5">
            <h6>Quadrant 3</h6>
            <table class="table table-bordered table-striped">
                <tbody>
                    @foreach (var x in Model)
                    {
                        if (x.Quadrant == 3)
                        {

                            <tr>

                                <td>@x.Task</td>

                                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
                                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="col-5">
            <h6>Quadrant 4</h6>
            <table class="table table-bordered table-striped">
                <tbody>
                    @foreach (var x in Model)
                    {
                        if (x.Quadrant == 4)
                        {

                            <tr>

                                <td>@x.Task</td>

                                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
                                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
